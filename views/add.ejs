<% include partials/header %>

<div class="container">
    <div class="row">
        <h3>发布闲置</h3>
        <form action="/items" method="POST">
            <div class="form-group">
                <input class="form-control"
                       type="text"
                       name="name"
                       placeholder="name">
            </div>
            <div class="form-group">
                <input class="form-control"
                       type="text"
                       name="image"
                       placeholder="image url">
            </div>
            <div class="form-group">
                <input class="form-control"
                       type="text"
                       name="description"
                       placeholder="description">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/items">返回</a>
    </div>
</div>


