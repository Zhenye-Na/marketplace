<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h3 style="text-align: center">Edit 闲置</h3>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/items/<%= product._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control"
                           type="text"
                           name="product[title]"
                           value="<%= product.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control"
                           type="text"
                           name="product[image]"
                           value="<%= product.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control"
                           type="text"
                           name="product[description]"
                           value="<%= product.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/items">返回</a>
        </div>
    </div>
</div>


