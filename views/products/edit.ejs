<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h3 style="text-align: center">修改闲置</h3>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/items/<%= product._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control"
                           type="text"
                           name="product[title]"
                           value="<%= product.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control"
                           type="text"
                           name="product[image]"
                           value="<%= product.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control"
                           type="text"
                           name="product[description]"
                           value="<%= product.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control"
                           type="number"
                           name="product[pricing]"
                           value=<%= product.pricing %>
                           min="0.01"
                           step="0.01">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">提交</button>
                </div>
            </form>
            <a href="/items">返回</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>